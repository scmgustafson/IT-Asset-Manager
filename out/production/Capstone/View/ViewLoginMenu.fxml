<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginMenuController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="400.0" spacing="10.0">
            <children>
                <Label text="Asset Manager">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="25.0" />
                    </VBox.margin>
                </Label>
                <Label text="Welcome!">
                    <VBox.margin>
                        <Insets top="25.0" />
                    </VBox.margin>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label text="Please enter your login credentials below:">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label text="Username">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets right="190.0" top="25.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="fieldUsername">
                    <VBox.margin>
                        <Insets left="75.0" right="75.0" />
                    </VBox.margin>
                </TextField>
                <Label layoutX="44.0" layoutY="209.0" text="Password">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets right="190.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="fieldPassword" layoutX="40.0" layoutY="223.0">
                    <VBox.margin>
                        <Insets left="75.0" right="75.0" />
                    </VBox.margin>
                </TextField>
                <HBox alignment="CENTER" layoutX="10.0" layoutY="261.0" prefHeight="25.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#onActionLogin" text="LOGIN">
                            <font>
                                <Font size="14.0" />
                            </font></Button>
                        <Button fx:id="btnExit" mnemonicParsing="false" onAction="#onActionExit" text="EXIT">
                            <font>
                                <Font size="14.0" />
                            </font></Button>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
