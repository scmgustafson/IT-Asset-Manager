<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EquipmentController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="10.0">
            <children>
                <Label text="Equipment Inventory" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="25.0" />
                    </VBox.margin>
                </Label>
                <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="1280.0">
                    <children>
                        <HBox alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Label alignment="CENTER" text="Search:">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets bottom="5.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="fieldEquipmentSearch" alignment="TOP_LEFT" onKeyPressed="#onKeyPressSearchEquipment" prefHeight="25.0" prefWidth="200.0">
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </TextField>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </HBox>
                        <TableView fx:id="tableEquipment" prefHeight="600.0" prefWidth="345.0">
                            <columns>
                                <TableColumn fx:id="colEquipmentId" maxWidth="125.0" minWidth="45.0" prefWidth="95.0" text="Equipment ID" />
                                <TableColumn fx:id="colQuantity" minWidth="70.0" prefWidth="111.0" text="Quantity" />
                                <TableColumn fx:id="colType" maxWidth="298.0" prefWidth="115.0" text="Type" />
                                <TableColumn fx:id="colModel" maxWidth="632.0" prefWidth="169.0" text="Model Number" />
                                <TableColumn fx:id="colSerial" maxWidth="632.0" prefWidth="182.0" text="Serial Number" />
                                <TableColumn fx:id="colEntryDateTime" maxWidth="632.0" prefWidth="190.0" text="Entry Date/Time" />
                                <TableColumn fx:id="colLocation" maxWidth="632.0" prefWidth="156.0" text="Location" />
                                <TableColumn fx:id="colUser" maxWidth="632.0" prefWidth="111.0" text="User" />
                            </columns>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                            <padding>
                                <Insets right="10.0" />
                            </padding>
                            <children>
                                <Label fx:id="labelUIMessage" text="UI CONFIRMATION MESSAGES DISPLAYED HERE">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onActionDisplayAddEquipment" text="ADD">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#onActionDisplayEditEquipment" text="EDIT">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#onActionDeleteEquipment" text="DELETE">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets left="75.0" right="75.0" />
                    </VBox.margin>
                </VBox>
                <Button fx:id="btnBack" mnemonicParsing="false" onAction="#onActionExit" prefWidth="75.0" text="BACK">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="25.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
